<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dayCardView"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="8dp">

    <!-- A vertical container to stack your header (day name)
         and all the row layouts one below the other. -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top text: Day Name -->
        <TextView
            android:id="@+id/tvDayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Monday"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />



        <!-- Row 1 -->
        <LinearLayout
            android:id="@+id/class_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="09:05-10:25AM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textAlignment="center"
                android:text="Class details"
                android:textColor="@color/Theme_green"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:id="@+id/class_2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="10:30-11:50AM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textAlignment="center"
                android:text="Class details"
                android:textColor="@color/Theme_green"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:id="@+id/class_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="11:55-1:15PM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Class details"
                android:textColor="@color/Theme_green"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:id="@+id/class_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1:15-2:00PM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Break Time"
                android:textColor="@color/Theme_green"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:id="@+id/class_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2:00-3:20PM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Class details"
                android:textAlignment="center"
                android:textColor="@color/Theme_green"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 6 -->
        <LinearLayout
            android:id="@+id/class_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="3:25-4:45PM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Class details"
                android:textColor="@color/Theme_green"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 7 -->
        <LinearLayout
            android:id="@+id/class_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_bg_row"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="7:00-8:20PM"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Class details"
                android:textColor="@color/Theme_green"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>
